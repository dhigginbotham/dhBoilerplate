extends ../layout

block content
  .page-header
    h1 View all users 

  table.table.table-striped
    thead
      tr
        th #
        th Username
        th Name
        th Email
        th Admin
        th Last Login
        th Logins
        th
    tbody
      for col, index in collection
        tr
          th=index + 1
          td
            a(href="/users/#{col._id}") #{col.username}
          td #{col.first_name + " " + col.last_name}
          td=col.email
          td=col.admin
          td=col.last_login[0]
          td=col.login_count
          td: a.label.label-info(href="/users/#{col._id}") Edit
